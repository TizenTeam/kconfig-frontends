default: rule/debuild
	@echo "#$@: $^"

# Comment this to turn off verbose mode.
export DH_VERBOSE=1
package?=kconfig-frontends
version?=$(shell [ -r debian/changelog ] \
 && which dpkg-parsechangelog > /dev/null \
 && dpkg-parsechangelog \
 | grep "Version:" | sed -e "s/Version: \(.*\)-.*/\1/g" \
 || echo "0.0.0.0")
export version

tarball?=${CURDIR}/../${package}_${version}.orig.tar.gz
export tarball

rule/setup: /etc/debian_version
	sudo apt-get install -y \
 devscripts \
 debhelper \
 dh-autoreconf \
 flex \
 gperf \
 libncurses5-dev \
 bison \
 pkg-config \
 #EOL

rule/debuild: debian/rules ${tarball}
	which ${@F} || ${<} ${@D}/setup
	ls $^
	${@F} -us -uc


${tarball}:
	 tar cvfz $@ \
--transform "s|^./|${package}-${version}/|" \
--exclude 'debian' --exclude-vcs \
.
	ls -l $@

%:
	dh $@ --with autoreconf

.PHONY: rule/debuild
